---

interface Props{
    photo: string;
    name: string;
    position: string;
    description: string;
    skills: string

}

const {photo, name, position, description, skills} = Astro.props;
---
<div class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-lg max-w-4xl w-full md:max-w-none md:shadow-none">
    <div class="flex flex-col justify-center md:flex-row items-center ">
        <!-- Profile Photo -->
        <div class="flex-shrink-0 w-72 h-72 mb-4 md:mb-0 md:mr-4">
            <img class="w-full h-full rounded-lg object-cover" src={photo} alt={name}>
        </div>
        <div class="flex flex-col items-center justify-center">
            <!-- Name -->
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">{name}</h1>
            <!-- Position -->
            <h3 class="text-xl text-gray-600 dark:text-gray-300">{position}</h3>
        </div>
    </div>
    <!-- Description -->
    <div class="mt-4">
        <p class="text-gray-700 dark:text-gray-400">{description}</p>
    </div>
    <!-- Skills -->
    <div class="mt-4">
        <h5 class="text-gray-500 dark:text-gray-400">{skills}</h5>
    </div>
</div>
