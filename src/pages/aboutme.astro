---
import Layout from "../layouts/Layout.astro"
import Navbar2 from "../components/Navbar2.astro"
import Data from "../../public/data/profile.json"
import Profile from "../components/Profile.astro"

const title= "Aboutme";

const profile= Data;
---


<Layout title={title}>
    <Navbar2/>
<main class="w-full min-h-screen dark:bg-gradient-to-b dark:from-gray-800 dark:via-gray-900 dark:to-black flex items-center justify-center">

<div >
    {profile.map((dato) => (
        <Profile
            photo={dato.photo}
            name={dato.name}
            position={dato.position}
            description={dato.description}
            skills={dato.skills} 
            
        />
    ))}
</div>

</main>
</Layout>
